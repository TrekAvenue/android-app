<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/topImageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:transitionName="listImageTransition"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:alpha="0.4"/>

        <nikhilg.dev.trekavenue.Utils.IconView
            android:id="@+id/backIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_icon"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:padding="8dp"
            android:layout_margin="8dp"/>

        <nikhilg.dev.trekavenue.Utils.QuickSandBoldTextView
            android:id="@+id/trekName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="16dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:transitionName="trekNameTransition"/>

    </FrameLayout>

</LinearLayout>
