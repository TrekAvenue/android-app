<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/trekItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/imageContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:transitionName="listImageTransition"/>

            <View
                android:id="@+id/filterView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green_filter"
                android:alpha="0.4"/>

            <nikhilg.dev.trekavenue.Utils.RobotoMediumTextView
                android:id="@+id/trekName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:transitionName="trekNameTransition"
                android:layout_gravity="center"/>

            <nikhilg.dev.trekavenue.Utils.RobotoRegularTextView
                android:id="@+id/priceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_gravity="top|right"/>

        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>